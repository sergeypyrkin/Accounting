<Window x:Class="Accounting.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting"
        mc:Ignorable="d"
        Title="НОВЫЙ АБОНЕНТ" Height="218.144" Width="661.634" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
       <StackPanel Margin="20 20" Orientation="Vertical">
           <StackPanel Orientation="Horizontal">
               <Label Width="100"> ФИО</Label>
               <TextBox Width="500" TextAlignment="Center" ></TextBox>
            </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Width="100">НАЧАЛО</Label>
            <DatePicker   Name="datePicker1" IsDropDownOpen="False"  SelectedDateFormat="Short" Height="27" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="100">КОЛ-ВО ДНЕЙ</Label>
            <TextBox Width="500" x:Name="col" TextAlignment="Center" ></TextBox>
        </StackPanel>
        <Button
            x:Name="b0"

            Width="100"
            Click="createAccount"
            Content="СОЗДАТЬ"
            Tag="1" Height="50"  Margin=" 0 10"/>
    </StackPanel>



</Window>
